<h1>Listing trailers</h1>
<%= @test %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Movie Name</th>
      <th>Video link</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trailers.reverse.each do |trailer| %>
      <tr>
        <td><%= trailer.movie.name rescue nil %></td>
        <td><%= YoutubeHelper::video_thumb(trailer.video_url).html_safe rescue nil %></td>
        <td><%= trailer.views %></td>
        <td><%= link_to 'Show', movie_trailer_path(@movie,trailer),:class => 'btn' %></td>
         <td><%= link_to 'Edit', edit_movie_trailer_path(@movie,trailer),:class => 'btn' %></td>
        <td><%= link_to 'Destroy', movie_trailer_path(@movie,trailer), method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trailer', new_movie_trailer_path, :class => 'btn' %>
