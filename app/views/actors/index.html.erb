<h1>Listing actors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      
      <th>No of movies</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td>
          <p><%= actor.name %></p>
          <% image_name = actor.picture.name rescue nil %>
          <%= image_tag('/uploads/' + image_name , :width => 100) if image_name %>
        </td>
        <td><%= actor.gender %></td>
        
        <td><%= actor.no_of_movies %></td>
        <td><%= actor.about %></td>
        <td><%= link_to 'Show', actor_path(actor),:class => 'btn' %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor),:class => 'btn' %></td>
        <td><%= link_to 'Destroy', actor_path(actor), method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Actor', new_actor_path, :class => 'btn' %>
