<h1>Listing movies using locales</h1>

<table class="table table-striped">
   <thead>
    <tr>
      <th>Name</th>
      <td>Casts</td>
      <th>Release date</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag(movies_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Movies" %>
    <%= submit_tag "Search" %>
  <% end %>
    <%= render 'movies_listing' %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, :class => 'btn' %>
