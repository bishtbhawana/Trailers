<h1>Listing movies</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.rating %></td>
        <td><%= link_to 'Show', movie,:class => 'btn' %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie),:class => 'btn' %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, :class => 'btn' %>
