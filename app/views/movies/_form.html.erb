    <%= f.label :casts %>
    <%= f.collection_select :actor_ids, Actor.order(:name), :id, :name, {}, {multiple: true, size: 10} %>
  </div>
  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
  <div>
   <%= time_zone_select(:person, :time_zone) %>
